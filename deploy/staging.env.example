# Findamine Staging Environment Configuration
# Copy this file to your deployment platform and fill in the values

# Web App Environment Variables
NODE_ENV=staging
NEXT_PUBLIC_API_URL=https://staging-api.findamine.com
NEXT_PUBLIC_ENVIRONMENT=staging
NEXT_PUBLIC_ANALYTICS_ID=staging-analytics-id
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_DEBUG=true

# Next.js Configuration
NEXTAUTH_URL=https://staging.findamine.com
NEXTAUTH_SECRET=staging-nextauth-secret-key-change-in-production

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_EMAIL_VERIFICATION=false

# External Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-staging-google-maps-api-key
NEXT_PUBLIC_GEOLOCATION_API_KEY=your-staging-geolocation-api-key

# API Environment Variables
DATABASE_URL=postgresql://username:password@staging-db.findamine.com:5432/findamine_staging
JWT_SECRET=staging-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
PORT=4000
HOST=0.0.0.0
CORS_ORIGIN=https://staging.findamine.com
COOKIE_SECRET=staging-cookie-secret-change-in-production
BCRYPT_ROUNDS=12
LOG_LEVEL=debug
ENABLE_SWAGGER=true
