# Findamine Production Environment Configuration
# Copy this file to your deployment platform and fill in the values

# Web App Environment Variables
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.findamine.com
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_ANALYTICS_ID=production-analytics-id
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_DEBUG=false

# Next.js Configuration
NEXTAUTH_URL=https://findamine.com
NEXTAUTH_SECRET=production-nextauth-secret-key-change-this-immediately

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_EMAIL_VERIFICATION=true

# External Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
NEXT_PUBLIC_GEOLOCATION_API_KEY=your-production-geolocation-api-key

# API Environment Variables
DATABASE_URL=postgresql://username:password@production-db.findamine.com:5432/findamine_production
JWT_SECRET=production-jwt-secret-key-change-this-immediately
JWT_EXPIRES_IN=24h
PORT=4000
HOST=0.0.0.0
CORS_ORIGIN=https://findamine.com
COOKIE_SECRET=production-cookie-secret-change-this-immediately
BCRYPT_ROUNDS=12
LOG_LEVEL=info
ENABLE_SWAGGER=false

# Security & Performance
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
